@model List<ResultWhyChooseYummyDto>
@{
    ViewData["Title"] = "WhyChooseYummyList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Neden Bizi Seçmelisiniz Listesi</h4>
                    </div>
                    <div class="card-body">
                        <a href="/WhyChooseYummy/CreateWhyChooseYummy" class="btn btn-sm btn-info">Yeni Neden Bizi Seçmelisiniz Alanı Girişi</a>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.ServiceTitle</td>
                                        <td>@item.ServiceDescription</td>
                                        <td><a href="/WhyChooseYummy/DeleteWhyChooseYummy/@item.ServiceId" class="btn btn-sm btn-danger">Sil</a></td>
                                        <td><a href="/WhyChooseYummy/UpdateWhyChooseYummy/@item.ServiceId" class="btn btn-sm btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

