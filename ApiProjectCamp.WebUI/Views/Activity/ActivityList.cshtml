@model List<ResultActivityDto>
@{
    ViewData["Title"] = "ActivityList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Organizayon Listesi<h4>
                    </div>
                    <div class="card-body">
                        <a href="/Activity/CreateActivity" class="btn btn-sm btn-info">Yeni Organizasyon Girişi</a>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Organizasyon Adı</th>
                                    <th scope="col">Organizasyon Açıklaması</th>
                                    <th scope="col">Organizasyon Fiyatı</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.ActivityTitle</td>
                                        <td>@item.ActivityDescription</td>
                                        <td>@item.ActivityPrice</td>
                                        <td><a href="/Activity/DeleteActivity/@item.ActivityId" class="btn btn-sm btn-danger">Sil</a></td>
                                        <td><a href="/Activity/UpdateActivity/@item.ActivityId" class="btn btn-sm btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

