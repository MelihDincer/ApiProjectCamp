@model GetByIdActivityDto
@{
    ViewData["Title"] = "UpdateActivity";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Organizasyon Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ActivityId" />
                            <label>Organizasyon Adı</label>
                            <input type="text" asp-for="ActivityTitle" class="form-control" />
                            <br />
                            <label>Organizasyon Açıklaması</label>
                            <input type="text" asp-for="ActivityDescription" class="form-control" />
                            <br />
                            <label>Organizasyon Fiyatı</label>
                            <input type="text" asp-for="ActivityPrice" class="form-control" />
                            <br />
                            <label>Organizasyon Görsel URL</label>
                            <input type="text" asp-for="ActivityImageUrl" class="form-control" />
                            <br />
                            <button class="btn btn-success btn-sm">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
