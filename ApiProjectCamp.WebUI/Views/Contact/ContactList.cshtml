@model List<ResultContactDto>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>İletişim Bilgileri</h4>
                    </div>
                    <div class="card-body">
                        <a href="/Contact/CreateContact" class="btn btn-sm btn-info">Yeni İletişim Bilgisi Girişi</a>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Adres</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Açık Saatler</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ContactAddress</td>
                                        <td>@item.ContactPhone</td>
                                        <td>@item.ContactEmail</td>
                                        <td>@item.ContactOpenHours</td>
                                        <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-sm btn-danger">Sil</a></td>
                                        <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-sm btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

