@model GetByIdProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Ürün Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Ürün Adı</label>
                            <input type="text" asp-for="ProductName" class="form-control" />
                            <br />
                            <label>Ürün Fiyatı</label>
                            <input type="number" step="0.01" class="form-control"
                                   value="@Model.ProductPrice.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                   name="ProductPrice" />
                            <br />
                            <label>Ürün Kategorisi</label>
                            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.v">
                                <option value="">--Kategori Seçiniz</option>
                            </select>
                            <br />
                            <label>Ürün Görsel URL</label>
                            <input type="text" asp-for="ProductImageUrl" class="form-control" />
                            <br />
                            <label>Ürün Açıklaması</label>
                            <textarea asp-for="ProductDescription" class="form-control" rows="5"></textarea>
                            <br />
                            <button class="btn btn-primary btn-sm">Değişiklikleri Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

