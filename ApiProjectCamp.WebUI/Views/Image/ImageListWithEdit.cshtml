@model List<ResultImageDto>
@{
    ViewData["Title"] = "ImageListWithEdit";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Görsel Listesi</h4>
                    </div>
                    <div class="card-body">
                        <a href="/Image/CreateImage" class="btn btn-sm btn-info">Yeni Görsel Girişi</a>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Görsel Başlığı</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.ImageTitle</td>
                                        <td><a href="/Image/DeleteImage/@item.ImageId" class="btn btn-sm btn-danger">Sil</a></td>
                                        <td><a href="/Image/UpdateImage/@item.ImageId" class="btn btn-sm btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

