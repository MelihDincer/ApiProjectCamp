@model GetByIdAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Hakkımda Alanı Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="AboutId" />
                            <label>Başlık</label>
                            <input type="text" asp-for="AboutTitle" class="form-control" />
                            <br />
                            <label>Rezervasyon Numarası</label>
                            <input type="text" asp-for="AboutReservationNumber" class="form-control" />
                            <br />
                            <label>Görsel URL</label>
                            <input type="text" asp-for="AboutImageUrl" class="form-control" />
                            <br />
                            <label>Video Kapak Görseli</label>
                            <input type="text" asp-for="AboutVideoCoverImageUrl" class="form-control" />
                            <br />
                            <label>Video Linki (Embed)</label>
                            <input type="text" asp-for="AboutVideoUrl" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <textarea class="form-control" rows="5" asp-for="AboutDescription"></textarea>
                            <br />
                            <button class="btn btn-primary btn-success">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

