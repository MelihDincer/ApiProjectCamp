@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Öne Çıkan Alan İşlemleri</h4>                      
                    </div>
                    <div class="alert alert-warning">Daha önce böyle bir alan eklendi ise güncelle alanından düzenleme yapabilirsiniz. Daha önce böyle bir alan eklenmedi ise Yeni Öne Çıkan Bilgisi Girişi butonuna tıklayarak yeni ekleyebilirsiniz.</div>
                    <div class="card-body">
                        @if(!Model.Any())
                        {
                            <a href="/Feature/CreateFeature" class="btn btn-sm btn-info">Yeni Öne Çıkan Bilgisi Girişi</a>
                        }
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alt Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.FeatureTitle</td>
                                        <td>@item.FeatureSubTitle</td>
                                        <td>@item.FeatureDescription</td>
                                        <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-sm btn-danger">Sil</a></td>
                                        <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-sm btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
