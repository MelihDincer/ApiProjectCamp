@model GetByIdFeatureDto

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Öne Çıkan Alan Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="FeatureId" />
                            <label>Başlık</label>
                            <input type="text" asp-for="FeatureTitle" class="form-control" />
                            <br />
                            <label>Alt Başlık</label>
                            <input type="text" asp-for="FeatureSubTitle" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <input type="text" asp-for="FeatureDescription" class="form-control" />
                            <br />
                            <label>Görsel URL</label>
                            <input type="text" asp-for="FeatureImageUrl" class="form-control" />
                            <br />
                            <label>Video URL (Embed Link)</label>
                            <input type="text" asp-for="FeatureVideoUrl" class="form-control" />
                            <br />
                            <button class="btn btn-success btn-sm">Değişiklikleri Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
