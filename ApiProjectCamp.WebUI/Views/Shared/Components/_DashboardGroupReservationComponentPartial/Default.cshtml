@model List<ResultGroupReservationDto>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4>Grup Rezervasyonları</h4>
                <div class="card-header-form">
                    <form>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Aranacak Rezervasyon">
                            <div class="input-group-btn">
                                <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tr>
                            <th class="text-center">
                                <div class="custom-checkbox custom-checkbox-table custom-control">
                                    <input type="checkbox" data-checkboxes="mygroup" data-checkbox-role="dad"
                                           class="custom-control-input" id="checkbox-all">
                                    <label for="checkbox-all" class="custom-control-label">&nbsp;</label>
                                </div>
                            </th>
                            <th>Grup Başlığı</th>
                            <th>Yetkili Kişi</th>
                            <th>Rezervasyon Durumu</th>
                            <th>Son İşlem Tarihi</th>
                            <th>Rezervasyon Tarihi</th>
                            <th>Öncelik</th>
                            <th>Detaylar</th>
                        </tr>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td class="p-0 text-center">
                                    <div class="custom-checkbox custom-control">
                                        <input type="checkbox" data-checkboxes="mygroup" class="custom-control-input"
                                               id="checkbox-1">
                                        <label for="checkbox-1" class="custom-control-label">&nbsp;</label>
                                    </div>
                                </td>
                                <td>@item.GroupTitle</td>
                                <td class="text-truncate">
                                    <ul class="list-unstyled order-list m-b-0 m-b-0">
                                        <li class="team-member team-member-sm">
                                            <img class="rounded-circle"
                                                 src="~/otika-bootstrap-admin-template/assets/img/users/user-8.png" alt="user" data-toggle="tooltip" title=""
                                                 data-original-title="@item.ResponsibleCustomerName">
                                        </li>
                                        @* <li class="team-member team-member-sm">
                                            <img class="rounded-circle"
                                                 src="assets/img/users/user-9.png" alt="user" data-toggle="tooltip" title=""
                                                 data-original-title="John Deo">
                                        </li>
                                        <li class="team-member team-member-sm">
                                            <img class="rounded-circle"
                                                 src="assets/img/users/user-10.png" alt="user" data-toggle="tooltip" title=""
                                                 data-original-title="Sarah Smith">
                                        </li>
                                        <li class="avatar avatar-sm"><span class="badge badge-primary">+4</span></li> *@
                                    </ul>
                                </td>"
                                <td class="align-middle">
                                    <div class="progress-text">@item.ReservationStatus</div>
                                    <div class="progress" data-height="6">
                                        <div class="progress-bar bg-success" data-width="75%"></div>
                                    </div>
                                </td>
                                <td>@item.LastProcessDate.ToString("dd-MMM-yyyy")</td>
                                <td>2019-05-28</td>
                                <td>
                                    <div class="badge badge-success">@item.Priority</div>
                                </td>
                                <td><a href="#" class="btn btn-outline-primary">Detaylar</a></td>
                            </tr>
                        }
                        
                        
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>